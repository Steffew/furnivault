@page
@model Furnivault.Pages.AddItemModel
@{
    ViewData["Title"] = "Add Item";
}

<div class="container item-manager-container mt-5">
    <div class="row">
        <div class="col-5 text-end">
            Item name
        </div>
        <div class="col-5">
            <textarea class="item-manager-field form-control" name="itemName" rows="1"></textarea>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-5 text-end">
            Item identifier
        </div>
        <div class="col-5">
            <textarea class="item-manager-field form-control" name="itemIdentifier" rows="1"></textarea>
        </div>
    </div>
    <div class="row mt-3 big">
        <div class="col-5 text-end">
            Item description
        </div>
        <div class="col-5">
            <textarea class="item-manager-field form-control" name="itemDescription" rows="3"></textarea>
        </div>
    </div>
</div>
